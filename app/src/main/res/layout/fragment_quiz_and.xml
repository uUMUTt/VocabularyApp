<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252222"
    tools:context=".QuizAndFragment">


    <TextView
        android:id="@+id/tvInfoCorrect"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Doğru Oranı :"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvCorrectRate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCorrectRate"
        android:layout_width="149dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:text="%80"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnRepeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoCorrect" />

    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="tekrar çöz"
        app:layout_constraintBottom_toTopOf="@+id/btnRetMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCorrectRate" />

    <Button
        android:id="@+id/btnRetMenu"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="213dp"
        android:text="ana menü"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRepeat" />
</androidx.constraintlayout.widget.ConstraintLayout>